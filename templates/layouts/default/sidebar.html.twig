        {% for module in layout.modules %}
            <li>
                <a href="{{ module.link }}" class="block">{{ module.name }}</a>
                <ul>
                    {% for application in module.applications %}
                        <li>
                            <a href="{{ application.fullLink }}" class="block pl-4">{{ application.name }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </li>
        {% endfor %}
